<Window x:Class="МосквинКульбацкий_И_____________Серега.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:МосквинКульбацкий_И_____________Серега"
        mc:Ignorable="d"
        Title="Login"  Height="350" Width="400">
    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Логин или Email:" Background="HotPink"/>
        <TextBox Grid.Row="1" x:Name="loginTextBox"/>

        <TextBlock Grid.Row="2" Text="Пароль:" Background="HotPink"/>
        <PasswordBox Grid.Row="3" x:Name="passwordBox1"/>



        <Button Grid.Row="4" Content="Войти" Click="Login_Click" Background="Gold" />

        <TextBlock Grid.Row="5" Background="HotPink" Text="Еще не зарегистрировались? Сделайте это сейчас!" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"/>
        <Button Grid.Row="6" Content="Зарегистрироваться" Click="Login_Click" Background="Gold" />
    </Grid>
   
</Window>
